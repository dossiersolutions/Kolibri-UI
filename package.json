{
  "name": "kolibri-ui",
  "version": "0.1.0",
  "private": false,
  "homepage": "https://dossiersolutions.github.io/kolibri-ui",
  "scripts": {
    "start": "react-scripts start",
    "watch-css": "less-watch-compiler --source-map styles public/styles --main-file main.less",
    "build-app": "react-scripts build",
    "build-lib": "babel src/components --out-dir components --copy-files",
    "test": "react-scripts test --env=jsdom",
    "predeploy": "yarn run build-app",
    "deploy": "gh-pages -d build",
    "prepublish": "cross-env CI=true yarn run test && yarn build-lib"
  },
  "files": [
    "components",
    "styles"
  ],
  "dependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-scripts": "1.0.14"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "cross-env": "^5.0.5",
    "gh-pages": "^1.0.0",
    "less": "^2.7.2",
    "less-watch-compiler": "^1.8.0"
  }
}
